doctype 5
html
  head
    title= R2
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")

    link(href='http://fonts.googleapis.com/css?family=Roboto:100|Open+Sans:400,300&subset=latin', rel='stylesheet', type='text/css')


    link(rel="stylesheet", type="text/css", href="#{path}/r2.css")

    script(src="#{path}/r2.js")

    script(type='text/javascript', charset='utf-8').
      var jQuery  = require("jqueryify");

      var apiServer= "#{apiServer}";
      
      var layout = "web";

      var exports = this;
      jQuery(function(){

        var App = require("r2");
        exports.app =  new App(
          { 
          el: $("body"), 
          layout: layout, 
          apiServer: apiServer,
          path: "#{path}"
          }
        ); 
      });


  body
    .visible-xs.responsiveCheck(data-device="mobile") a
    .visible-sm.responsiveCheck(data-device="mobile") a
    .visible-md.responsiveCheck(data-device="desktop") a 
    .visible-lg.responsiveCheck(data-device="desktop") a