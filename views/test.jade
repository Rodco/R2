doctype 5
html
  head
    title= R2
    link(href='http://fonts.googleapis.com/css?family=Roboto:100|Open+Sans:400,300&subset=latin', rel='stylesheet', type='text/css')

    link(rel="stylesheet", type="text/css", href="#{path}/r2.css")

    script(src="#{path}/r2.js")

    script(type='text/javascript', charset='utf-8').
      var jQuery  = require("jqueryify");

      var apiServer= "#{apiServer}";
       
      var layout = "web";

      var exports = this;
      jQuery(function(){
   
        $("form").submit(function(e){
         console.log(e);
         e.preventDefault();
         return false;
        });
        
        var App = require("r2");
        exports.app =  new App(
          { 
          el: $(".app"), 
          layout: layout, 
          apiServer: apiServer,
          path: "#{path}"
          }
        ); 
      });


  body.full-height
    .form.
      <form action="/test.html" class="app-detail-form" data-app="c-2">


        <h1>pedidos</h1>


        <h4>Label</h4>
        <input name="label" class="form-control item-editable" data-type="label" value="Pedidos">

        <h4>Icon Color</h4>
        <select name="iconColor" class="form-control item-editable" data-type="iconColor" "="">
          <option selected="">red</option>
          <option>blue</option>
          <option>purple</option>
        </select>

        <h4>Icon Label</h4>
        <input name="iconLabel" class="form-control item-editable" data-type="iconLabel" value="Pe">

        <div class="buttons">
          <button type="submit" class="btn btn-primary pull-right btn-action-save-app">Save</button>
          <a class="btn btn-danger btn-action-delete-app item-editable">Delete</a>
        </div>

      </form>
    .app
    
      
    .visible-xs.responsiveCheck(data-device="mobile") a
    .visible-md.responsiveCheck(data-device="desktop") a 
    .visible-lg.responsiveCheck(data-device="desktop") a
    


